@model IEnumerable<Micraft.ManeGrowAgro.Models.VehicleMaster>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-lg-2 col-md-2 col-12">
                <h5 class="text-dark mr-2"><b>Vehicle Master</b></h5>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <p>
                                @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-secondary" })
                            </p>
                            <table class="table table-striped table-bordered dt-responsive" style="width:100%;">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.VendorID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.VehicleNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.VehicleType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InsuranceValidity)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Puc)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RCBook)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RCValidity)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.VehicleCapacity)
                                    </th>
                                    <th>Action</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VendorID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VehicleNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VehicleType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InsuranceValidity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Puc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RCBook)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RCValidity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VehicleCapacity)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID },new {@class="btn btn-primary" }) 
                                            @*@Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        var tEMP = '@TempData["success"]';
        if (tEMP != "" && tEMP != undefined && tEMP != null) {
            swal("Success!", tEMP, "success");
        }
        var tEMP = '@TempData["error"]';
        if (tEMP != "" && tEMP != undefined && tEMP != null) {
            swal("Error!", tEMP, "error");
        }
    });
</script>