@model IEnumerable<Micraft.ManeGrowAgro.Models.ProductType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-lg-2 col-md-2 col-12">
                <h5 class="text-dark mr-2"><b>Product Type</b></h5>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table id="example" class="table table-striped table-bordered dt-responsive" style="width:100%;">
                                            <thead>
                                                <tr class="text-uppercase">
                                                    <th>Type</th>
                                                    <th>IsActive</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {

         var tEMP = '@TempData["success"]';
        if (tEMP != "" && tEMP != undefined && tEMP != null) {
            swal("Success!", tEMP, "success");
        }
        var tEMP = '@TempData["error"]';
        if (tEMP != "" && tEMP != undefined && tEMP != null) {
            swal("Error!", tEMP, "error");
        }



        try {
            $('#example').DataTable({
                //lengthChange: false,
                paging: true,
                //bFilter: true,
                //ordering: true,
                "searching": true,
                //bFilter:true,
                //"filter": true,
                //"bSearchable": true,
                dom: 'Bfrtip',
                "bServerSide": true,
                "sAjaxSource": '@Url.Action("GetData", "ProductTypes")',
                "sServerMethod": "POST",
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print',
                    {
                        text: 'Add New',
                        action: function (e, dt, node, config) {

                            window.location.href = '/ProductTypes/Create'
                        }
                    },

                ],
                language: {
                    searchPlaceholder: "Search",
                    search: ""
                },
                "aoColumns": [
                    {
                        "mData": "Type"
                    },
                    {
                        "mData": "IsActive"
                    },

                    {
                        "mData": function (o) {
                            return "<div class = 'd-flex justify-content-center'><button type='button' id=" + o.ID + " class='btn btn-primary btn-sm mr-2' onclick='Edit(this.id);'><i class='fa fa-edit'></i></button><button type='button' id=" + o.ID + " onclick='Delete(this.id);' class='btn btn-danger btn-sm'><i class='fas fa-trash'></i></button></div>"
                        }
                    },
                ],
            });
        }
        catch (e) {
        }

        $("#AddNew").click(function () {
            var Type = $("#Type").val();

            var IsActive = true;
            if ($('#IsActive').is(":checked")) {
                IsActive = true;
            } else {
                IsActive = false;
            }
            if (Type == null || Type == "") {
                swal("Error", "Product type is required", "error");
                return;
            }

            var records = {
                "Type": Type,
                "IsActive": IsActive
            };
            $.ajax({
                url: "/ProductTypes/AddRecord",
                type: "POST",
                dataType: "json",
                data: JSON.stringify(records),
                contentType: "Application/json",
                success: function (data) {
                    //swal("Success", "Record Added Success", "success");
                    RefreshData();
                    if (data == 1) {
                        swal("Success", "Record Added Success", "success");
                        RefreshData();
                        $("#AddNewModal").modal("hide");
                    } else {
                        swal("Error", "Something went wrong while adding record", "error");
                    }
                },
                error: function (ex) {
                    console.log("error");
                    console.log(ex);
                }
            });
        });
        $("#Update").click(function () {
            var Type = $("#eType").val();
            var IsActive = true;
            if ($('#eIsActive').is(":checked")) {
                IsActive = true;
            } else {
                IsActive = false;
            }
            if (Type == null || Type == "") {
                swal("Error", "Product type is required", "success");
                return;
            }

            var tId = $("#tId").val();
            var records = {
                "ID": tId,
                "Type": Type,
                "IsActive": IsActive
            };
            $.ajax({
                url: "/ProductTypes/UpdateRecord",
                type: "POST",
                dataType: "json",
                data: JSON.stringify(records),
                contentType: "Application/json",
                success: function (data) {
                    //swal("Success", "Record Added Success", "success");
                    RefreshData();
                    if (data == 1) {
                        swal("Success", "Record Updated Success", "success");
                        RefreshData();
                        $("#EditModal").modal("hide");
                    } else {
                        swal("Error", "Something went wrong while updating record", "error");
                    }
                },
                error: function (ex) {
                    console.log("error");
                    console.log(ex);
                }
            });
        });
        function RefreshData() {
            var table = $('#example').DataTable();
            table.ajax.reload(function (json) {
            });
        }


    });
    function Delete(id) {
        console.log(id);
    }
    function Edit(id) {

        window.location.href = '/ProductTypes/Edit/' + id
        console.log(id);
        var tId = id;
        $("#tId").val(id);
        var records = {
            "ID": tId
        };
        $.ajax({
            url: "/ProductTypes/GetRecord",
            type: "POST",
            dataType: "json",
            data: JSON.stringify(records),
            contentType: "Application/json",
            success: function (data) {
                $("#eType").val(data.Type);
                $('#eIsActive').is(":checked") = data.IsActive;
            },
            error: function (ex) {
                console.log("error");
                console.log(ex);
            }
        });

    }

    function Delete(id) {
        if (confirm("Are you sure you want to delete this record?")) {
            $.ajax({
                url: '/ProductTypes/DeleteConfirmed',
                type: "GET",
                dataType: "JSON",
                data: { id: id },
                success: function (result) {
                    if (result.Message == "success") {
                        swal("Success", "Record Delete Successfully", "success");
                        window.location.href = "/ProductTypes/Index";
                    } else {
                        toastr.error(result.Message);
                    }
                },
                error: function (ex) {
                    console.log("error");
                    console.log(ex);
                }
            });
        } else {

            false;
        }

    }


</script>