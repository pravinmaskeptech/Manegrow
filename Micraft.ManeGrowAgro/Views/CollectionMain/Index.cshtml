
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    table.dataTable th,
    table.dataTable td {
        white-space: nowrap;
    }

    table.dataTable th,
    table.dataTable td {
        white-space: nowrap;
    }

    .btn btn-secondary green {
        color: green;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-lg-4 col-md-2 col-12">
                <h5 class="text-dark mr-2"><b>Payment Collection</b></h5>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="table table-striped table-bordered dt-responsive" style="width:100%;">
                                <thead>
                                    <tr class="text-uppercase">
                                        <th>Customer</th>
                                        <th>Payment Date</th>
                                        <th>Mode</th>
                                        <th>Amount</th>
                                        <th>Payment Details</th>
                                        <th>Transaction ID</th>
                                        <th>Transaction Date</th>
                                        <th>User </th>
                                        
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                         
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
<link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" rel="Stylesheet" type="text/css" />


<script>
    $(document).ready(function () {
       $('#example').DataTable({
             "paging": true,
             "searching": true,
             dom: 'Bfrtip',
             "bServerSide": true,
             "sAjaxSource": '@Url.Action("GetData", "CollectionMain")',
             "sServerMethod": "POST",
             buttons: [ 'excel',
                 {
                     text: 'Add New',
                     action: function (e, dt, node, config) {
                         window.location.href = '/CollectionMain/Create/'
                     }
                 },
             ],
             language: {
                 searchPlaceholder: "Search",
                 search: ""
             },
               "aoColumns": [
                    {
                       "mData": "CustID"
                    },
                    {
                        "mData": "PaymentDate",
                        data: "PaymentDate", render: function (data) {
                            return moment(data).format('DD-MM-YYYY');
                        }
                    },
                    {
                        "mData": "PaymentMode"
                    },
                    {
                        "mData": "PayAmount"
                    },
                    {
                        "mData": "PaymentDetails"
                   },
                   {
                       "mData": "TransactionID"
                   },
                   {
                       "mData": "TransactionDate",
                        data: "TransactionDate", render: function (data) {
                           return moment(data).format('DD-MM-YYYY');
                       }
                   },
                   {
                       "mData": "CreatedBy"
                   },
                    {
                         "mData": function (o) {
                            return "<div class = 'd-flex justify-content-center'>@*<button type='button' id=" + o.ID + " class='btn btn-primary btn-sm mr-2' onclick='Edit(this.id);'><i class='fa fa-edit'></i></button>*@<button type='button' id=" + o.ID + " onclick='Delete(this.id);' class='btn btn-danger btn-sm'><i class='fas fa-trash'></i></button></div>"
                         }
                    },
               ],
       });
    });

    function Edit(id) {
        window.location.href = "/CollectionMain/Create/" + id;
    }

    function Delete(id) {
        debugger;
        if (confirm("Are you sure you want to delete this record?")) {
            $.ajax({
                url: '/CollectionMain/DeleteConfirmed',
                type: "GET",
                dataType: "JSON",
                data: { id: id },
                success: function (result) {
                    if (result.Message == "success") {
                        swal("Success", "Record Delete Successfully", "success");
                        window.location.href = "/CollectionMain/Index";
                        CalculateTotal();
                    } else {
                        toastr.error(result.Message);
                    }
                },
                error: function (ex) {
                    console.log("error");
                    console.log(ex);
                }
            });
        } else {
            false;
        }
    }

   
</script>