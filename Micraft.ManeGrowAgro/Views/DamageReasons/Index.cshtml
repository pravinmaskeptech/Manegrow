@model IEnumerable<Micraft.ManeGrowAgro.Models.DamageReasons>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-lg-4 col-md-2 col-12">
                <h5 class="text-dark mr-2"><b>Reject Reasons</b></h5>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @*<div class="content-header" style="padding:1px">
                                        <h4>Room Master</h4>
                                    </div>
                                    <hr />*@
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="modal-body">

                                    <div class="row">

                                        <div class="col-md-12">
                                            @*@Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-secondary" })*@
                                            <a class="btn btn-primary text-white" href="@Url.Action("Create","DamageReasons")"> Add <i class="fa fa-plus"></i> </a>

                                            <br /><br />

                                            <div class="table-responsive">
                                                <table id="example" class="table table-striped table-bordered dt-responsive" style="width:100%;">
                                                    <thead>
                                                        <tr class="text-uppercase">
                                                            <th>Reject Reason</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                         <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.DamageReason)
                                                            </td>
                                                            @*<td>
                                                                <button class="btn btn-primary btn-sm mr-2" onclick="Edit(id)"><i class='fa fa-edit'></i></button>
                                                                <button class="btn btn-danger btn-sm mr-2" onclick="return confirm('Are you sure you wish to delete this Damage Reason.?')"><i class='fa fa-trash'></i></button>

                                                            </td>*@
                                                            <td>
                                                                 @Html.ActionLink("Edit", "Edit", new { ID = item.ID }, new { onclick = "Edit(id)",  @class = "btn btn-primary" })
                                                                 @Html.ActionLink("Delete", "Delete", new { ID = item.ID }, new { onclick = "return confirm('Are you sure you wish to delete this Damage Reason.?');", @class = "btn btn-danger" })

                                                            </td>

                                                        </tr>
                                                         }
                                                    </tbody>

                                                </table>
                                            </div>

                                        </div>

                                    </div>


                                    <br />

                                </div>

                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
<link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" rel="Stylesheet" type="text/css" />

<script src="~/Scripts/jquery.preloaders.js"></script>



<script>

    $(document).ready(function () {

        try {

             var temp = '@TempData["delete"]';
        if (temp != null && temp != undefined && temp != "")
        {
            toastr.success("Deleted Successfully");
        }
             var temp = '@TempData["success"]';
        if (temp != null && temp != undefined && temp != "")
        {
            toastr.success("Saved Successfully");
        }

        }
        catch (e) {
        }
    });

    function Edit(id) {
        window.location.href = "/DamageReasons/Edit/" + id;
    }
</script>


