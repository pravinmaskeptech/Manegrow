
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-lg-4 col-md-4 col-12">
                <h5 class="text-dark mr-2"><b>Rate Updation List</b></h5>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="table table-striped table-bordered dt-responsive" style="width:100%;">
                                <thead>
                                    <tr class="text-uppercase">
                                        <th>Date</th>
                                        <th>Customer Name</th>
                                        <th>Product Name</th>
                                        <th>Weight</th>
                                        <th>UOM</th>
                                        <th>Qty</th>
                                        <th>Today's Rate</th>
                                        @*<th>Action</th>*@
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
<link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" rel="Stylesheet" type="text/css" />

<script src="~/Scripts/jquery.preloaders.js"></script>
<script>


    $(document).ready(function () {
       $('#mydate').datepicker({
                dateFormat: 'dd-mm-yy',
                autoclose: true,
                onSelect: function () {
                    GetDamageDetails()

                }
            });
              $('#mydate').val('@DateTime.Now.ToString("dd-MM-yyyy")');
           
        try {

            $('#example').DataTable({
                //lengthChange: false,
              //  paging: true,
                //bFilter: true,
                //ordering: true,
                "searching": true,
                bFilter:true,
                "filter": true,
                "bSearchable": true,
                dom: 'Bfrtip',
                "bServerSide": true,
                "sAjaxSource": '@Url.Action("GetData", "RateMaster")',
                "sServerMethod": "POST",
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print',
                    {
                        text: 'Add New',
                        action: function (e, dt, node, config) {

                            window.location.href = '/RateMaster/Create'
                        }
                    },

                ],
                language: {
                    searchPlaceholder: "Search",
                    search: ""
                },
                "aoColumns": [
                    //{
                    //    "ID":"ID"
                    //},
                    {
                        "mData": "Date",
                        data: "Date", render: function (data) {
                            return moment(data).format('DD-MM-YYYY');
                        }
                    },
                    {
                        "mData": "CustomerName"
                    },
                    {
                        "mData": "ProductName"
                    },
                    {
                        "mData": "Weight"
                    },
                    {
                        "mData": "UOM"
                    },
                    {
                        "mData": "Qty"
                    },

                    {
                        "mData": "TodayRate"
                    },

                    //{
                    //    "mData": function (o) {
                    //        return "<div class = 'd-flex justify-content-center'><button type='button' id=" + o.ID + " class='btn btn-primary btn-sm mr-2' onclick='Edit(this.id);'><i class='fa fa-edit'></i></button><button type='button' id=" + o.ID + " onclick='Delete(this.id);' class='btn btn-danger btn-sm'><i class='fas fa-trash'></i></button></div>"
                    //    }
                    //},
                ],
            });
        }
        catch (e) {
        }

   });


    function Edit(id) {
        debugger;

        window.location.href = '/RateMaster/Edit/' + id
    }


    function Delete(id) {
        debugger;
        if (confirm("Are you sure you want to delete this record?")) {
            $.ajax({
                url: '/RateMaster/DeleteConfirmed',
                type: "GET",
                dataType: "JSON",
                data: { id: id },
                success: function (result) {
                    if (result.Message == "success") {
                        swal("Success", "Record Delete Successfully", "success");
                        window.location.href = "/RateMaster/Index";
                    } else {
                        toastr.error(result.Message);
                    }
                },
                error: function (ex) {
                    console.log("error");
                    console.log(ex);
                }
            });
        } else {

            false;
        }

    }

</script>