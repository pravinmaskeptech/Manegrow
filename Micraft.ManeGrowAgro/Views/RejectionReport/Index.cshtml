                "searching": true,
                dom: 'Bfrtip',
                "bServerSide": true,
                "sAjaxSource": '@Url.Action("GetData", "RejectionReport")',
                "sServerMethod": "POST",
                buttons: [/*'copy', 'csv', */{
                    extend: 'excel',
                    title: 'Rejection Report',
                    exportOptions: {
                        columns: ':visible',
                        orthogonal: 'excel',
                        modifier: {
                            order: 'current',
                            page: 'all',
                            selected: false,
