<script src="~/Scripts/jquery.preloaders.js"></script>



<script>

    $(document).ready(function () {
        $('#example').hide();
        $('#fromdate').datepicker({
            dateFormat: 'dd-mm-yy',
            autoclose: true
        });

        $('#todate').datepicker({
            dateFormat: 'dd-mm-yy',
            autoclose: true
        });
    });


    function GetReport() {
        var isval = true;
        if ($('#fromdate').val() == null || $('#fromdate').val() == "") {
            isval = false;
            toastr.error("Select From Date.");
        }
        if ($('#todate').val() == null || $('#todate').val() == "") {
            isval = false;
            toastr.error("Select To Date.");
        }
        if (isval == true) {
            $.preloader.start({
                modal: true,
                src: 'sprites2.png'
            });
            $('#example').show();
            setdates();
            report();

        }
        else {
            $.preloader.stop();
        }
    }
    function setdates() {

        $.ajax({
            type: "GET",
            url: '@Url.Action("SetDates", "RejectionReport")',
            data: { FROMDATE: $("#fromdate").val(), TODATE: $("#todate").val(), RejectionReason: $('#RejectionReason').val()},
            dataType: "json",
            success: function (result)
            {
                $.preloader.stop();
                if (result.Message == "success") {

                }
                else {
                }
            },
            failure: function (response) {
                $.preloader.stop();
            },
            error: function (err) {
                $.preloader.stop();

            }
        });
    }

     function report() {
        try {
            $('#example').DataTable({
                "columnDefs": [{
                    "targets": [0], //Comma separated values
