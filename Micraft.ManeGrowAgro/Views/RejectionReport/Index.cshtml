    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-12">
                <h5 class="text-dark mr-2"><b>Rejection Report</b></h5>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <input type="hidden" id="ID" />
        <input type="hidden" id="Count" value="1000" />
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">

                            <div class="col-md-1">
                                <label>From Date</label>
                            </div>
                            <div class="col-md-2">
                                <input type="text" id="fromdate" name="fromdate" class="form-control" />
                            </div>

                            <div class="col-md-1">
                                <label>To Date</label>
                            </div>
                            <div class="col-md-2">
                                <input type="text" id="todate" name="todate" class="form-control" />
                            </div>

                            <div class="col-md-1">
                                <label>Sort By</label>
                            </div>
                            <div class="col-md-2">                                
                                <select id="RejectionReason" class="form-control">
                                    <option value="All">All</option>
                                    <option value="Rejection History Added">Rejection History Added</option>
                                    <option value="Rejection History Not Added">Rejection History Not Added</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <button type="button" id="btnget" name="btnget" onclick="GetReport()" class="btn btn-success">Get Report</button>
                            </div>

                        </div>
                        <br />

                        <div class="table-responsive">

                            <table id="example" class="table table-striped table-bordered dt-responsive" style="width:100%">
                                <thead>
                                    <tr class="text-uppercase" style="font-size: 12px; background-color: #d8e9c1">
                                        <th>Order No</th>
                                        <th>Order Date</th>
                                        <th>Cust Type</th>
                                        <th>Cust Code</th>
                                        <th>Cust Name</th>
                                        <th>Location</th>
                                        <th>Product</th>
                                        <th>Disp Qty</th>
                                        <th>Del Qty</th>
                                        <th>Rej Qty</th>
                                        <th>Sold Qty</th>
                                        <th>RTO/Scrap Qty</th>
                                        <th>Sold Rate</th>
                                        <th>Sold Cust Name</th>
                                        <th>Reason</th>
                                        <th>Bill No</th>
                                        <th>Remark</th>
                                        <th>Rate</th>
                                        <th>Disp Amt</th>
                                        <th>Del Amt</th>
                                        <th>Rej Amt</th>
                                        <th>Sold Amt</th>
                                        <th>Reject Reason</th>
                                        <th>User</th>
                                        <th>UpdatedDate</th>

                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!--/. col -->

        </div>
        <!--/. row -->

    </div>


    <!-- /.container-fluid -->
</section>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
