    $(function () {
        $("#Area").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '/CustomerMasters/AutoComplete',
                    data: "{ 'prefix': '" + request.term + "','city': '"+$("#City").val()+"'}",
                    dataType: "json",
                    type: "POST",
