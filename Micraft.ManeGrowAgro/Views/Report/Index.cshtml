@model IEnumerable<Micraft.ManeGrowAgro.Models.MainOrder>

@{
    ViewBag.Title = "Customer Order Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #tbl11 .form-control {
        width: 70px;
        padding: 0;
    }
</style>

<style>
    table.dataTable th,
    table.dataTable td {
        white-space: nowrap;
    }

    .btn btn-secondary green {
        color: green;
    }
</style>
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-12">
                <h5 class="text-dark mr-2"><b>Customer Orders Report</b></h5>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <input type="hidden" id="ID" />
        <input type="hidden" id="Count" value="1000" />
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">

                            <div class="col-md-1">
                                <label>From Date</label>
                            </div>
                            <div class="col-md-2">
                                <input type="text" id="fromdate" name="fromdate" class="form-control" />
                            </div>

                            <div class="col-md-1">
                                <label>To Date</label>
                            </div>
                            <div class="col-md-2">
                                <input type="text" id="todate" name="todate" class="form-control" />
                            </div>

                            <div class="col-md-2">
                                <button type="button" id="btnget" name="btnget" onclick="GetReport()" class="btn btn-success">Get Report</button>
                            </div>

                        </div>
                        <br />

                        <div class="table-responsive">
                            
                            <table id="example"  class="table table-striped table-bordered dt-responsive" style="width:100%">
                            <thead>
                                <tr class="text-uppercase" style="font-size: 12px; background-color: #d8e9c1">
                                    <th>Order Id</th>
                                    <th>Date</th>
                                    <th>Customer Code</th>
                                    <th>Customer Name</th>
                                    <th>Short Name</th>
                                    <th>City</th>
                                    <th>Location</th>
                                    <th>Product Category</th>
                                    <th>Product Name</th>
                                    <th>Qty</th>
                                    <th>UOM</th>
                                    <th>Weight</th>
                                    <th>Exp Delivery Date</th>
                                    <th>Exp Delivery Time</th>
                                    <th>Remark</th>
                                </tr>
                                </thead>
                            <tbody>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!--/. col -->

        </div>
        <!--/. row -->

    </div>


    <!-- /.container-fluid -->
</section>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
<link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" rel="Stylesheet" type="text/css" />

<script src="~/Scripts/jquery.preloaders.js"></script>



<script>

    $(document).ready(function () {
        $('#example').hide();
        $('#fromdate').datepicker({
            dateFormat: 'dd-mm-yy',
            autoclose: true
        });

        $('#todate').datepicker({
            dateFormat: 'dd-mm-yy',
            autoclose: true
        });
    });


    function GetReport() {
        var isval = true;
        if ($('#fromdate').val() == null || $('#fromdate').val() == "") {
            isval = false;
            toastr.error("Select From Date.");
        }
        if ($('#todate').val() == null || $('#todate').val() == "") {
            isval = false;
            toastr.error("Select To Date.");
        }
        if (isval == true) {
            $.preloader.start({
                modal: true,
                src: 'sprites2.png'
            });
            $('#example').show();
            setdates();
            report();

        }
        else {
            $.preloader.stop();
        }
    }
    function setdates() {

        $.ajax({
            type: "GET",
            url: '@Url.Action("SetDates", "Report")',
            data: { FROMDATE: $("#fromdate").val(), TODATE:$("#todate").val()},
            dataType: "json",
            success: function (result)
            {
                $.preloader.stop();
                if (result.Message == "success") {

                }
                else {
                }
            },
            failure: function (response) {
                $.preloader.stop();
            },
            error: function (err) {
                $.preloader.stop();

            }
        });
    }

     function report() {
        try {
            $('#example').DataTable({
                "columnDefs": [{
                    "targets": [0], //Comma separated values
                    "visible": false,
                    "searchable": false
                }
                ],
                processing: true,
                "destroy": true,
                "paging": true,
                "searching": true,
                dom: 'Bfrtip',
                "bServerSide": true,
                "sAjaxSource": '@Url.Action("GetData", "Report")',
                "sServerMethod": "POST",
                buttons: [/*'copy', 'csv', */{
                    extend: 'excel',
                    title: 'Actual Production Report-Manegrow',
                    exportOptions: {
                        columns: ':visible',
                        orthogonal: 'excel',
                        modifier: {
                            order: 'current',
                            page: 'all',
                            selected: false,
                        },
    },
},/*, 'pdf', 'print'*/
                ],
                language: {
                    searchPlaceholder: "Search",
                    search: ""
                },
                "aoColumns": [
                    {
                        "mData": "ID",
                    },
                   {
                       "mData": "Date",
                       data: "Date", render: function (data) {
                           return moment(data).format('DD-MM-YYYY');
                       }
                    },
                    {
                        "mData": "CustomerCode"
                    },
                    {
                        "mData": "CustomerName"
                    },
                    {
                        "mData": "ShortName"
                    },
                    {
                        "mData": "City"
                    },
                    {
                        "mData": "Location"
                    },
                   {
                       "mData": "CategoryName"
                   },
                    {
                        "mData": "ProductName"
                    },
                    {
                        "mData": "Qty"
                    },
                    {
                        "mData": "UOM"
                    },
                    {
                        "mData": "Weight"
                    },
                    {
                        "mData": "ExpectedDeliveryDate",
                        data: "ExpectedDeliveryDate", render: function (data) {
                            return moment(data).format('DD-MM-YYYY');
                        }
                    },
                    {
                        "mData": "ExpectedDeliveryTime"
                    },
                    {
                        "mData": "Remark"
                    }

                  ],
            });
        }
        catch (e) {
        }
    }

    function Delete(id) {
        if (confirm("Are you sure you want to delete this record?")) {
            $.ajax({
                url: '/CustomerOrder/DeleteConfirmed',
                type: "GET",
                dataType: "JSON",
                data: { id: id },
                success: function (result) {
                    if (result.Message == "success") {
                        swal("Success", "Record Delete Successfully", "success");
                        window.location.href = "/CustomerOrder/Index";
                    } else {
                        toastr.error(result.Message);
                    }
                },
                error: function (ex) {
                    console.log("error");
                    console.log(ex);
                }
            });
        } else {
            false;
        }

        }

        function Edit(id) {

            window.location.href = '/CustomerOrder/Create/'+id
    }

</script>
