@model Micraft.ManeGrowAgro.Models.WeeklyProdPlan

@{
    ViewBag.Title = "Weekly Prod Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #tbl11 .form-control {
